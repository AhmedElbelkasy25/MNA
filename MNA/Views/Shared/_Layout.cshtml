@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MNA</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MNA.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <style>
        html {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        body {
            position: relative;
            background-image: url("/images/backgrounds/3.jpg");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: -1;
            }

        .container {
            flex-grow: 1;
            padding: 5px;
        }

        .navbar {
            background: #2C3E50;
            padding: 5px 5px;
        }

        .navbar-brand {
            font-size: 22px;
            font-weight: bold;
            color: #ecf0f1 !important;
        }

        .navbar-nav .nav-link {
            color: #dfe6e9 !important;
            font-weight: 500;
            padding: 8px 15px;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #f39c12 !important;
            }

        .user-profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid white;
        }

        .dropdown-menu {
            border-radius: 8px;
            border: none;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item:hover {
            background: #ecf0f1;
        }

        .btn-outline-light {
            border-color: #ecf0f1;
            color: #ecf0f1;
            transition: 0.3s;
        }

            .btn-outline-light:hover {
                background: #ecf0f1;
                color: #2C3E50;
            }

        footer {
            background: #2C3E50;
            color: white;
            padding: 15px 0;
            text-align: center;
            margin-top: auto;
        }

        .footer-links a {
            color: #f39c12;
            margin: 0 10px;
            text-decoration: none;
            transition: 0.3s;
        }

            .footer-links a:hover {
                color: #ffffff;
            }

        .cart-badge {
            font-size: 12px;
            background: red;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            position: absolute;
            top: 8px;
            right: 2px;
        }

        .nav-link i {
            display: inline-block; /* Make sure the icon is inline */
        }

        .cart-badge {
            margin-left: 5px; /* Adjust this value to control the space */
            display: inline-block; /* Make sure the badge is inline */
        }


    </style>
</head>
<body class="@((ViewData["BodyClass"] ?? "").ToString())">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="Student" asp-controller="Home" asp-action="Index">MNA Academy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Student" asp-controller="Course" asp-action="Index">
                                <i class="fas fa-book"></i> Courses
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Favorites Icon -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Student" asp-controller="Favorite" asp-action="Index">
                                    <i class="fas fa-heart"></i> Favorites
                                </a>
                            </li>

                            <!-- Cart Icon -->
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-area="Student" asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i> Cart
                                    <span id="cartCount" class="cart-badge">0</span>
                                </a>
                            </li>
                        }



                        @if (User.Identity.IsAuthenticated)
                        {
                            var user = await userManager.GetUserAsync(User);
                            if (user != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle user-profile" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                        <img src="@(string.IsNullOrEmpty(user.ImgUrl) ? "/images/AdminImg/Basic_Ui__28186_29.jpg" : $"/images/AdminImg/{user.ImgUrl}")" alt="User">
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="/Identity/account/GetProfile?name=@User.Identity.Name"><i class="fas fa-user-circle"></i> Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" href="/Identity/Account/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item"><a class="btn btn-outline-light me-2" href="/Identity/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                            <li class="nav-item"><a class="btn btn-warning" href="/Identity/Account/Register"><i class="fas fa-user-plus"></i> Register</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - MNA Academy</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            updateCartCount();
        });

        function updateCartCount() {
            $.get("/Student/Cart/GetCartCount", function (count) {
                $("#cartCount").text(count);
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
