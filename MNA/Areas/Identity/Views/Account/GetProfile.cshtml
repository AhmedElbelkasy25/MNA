@model Models.ApplicationUser

@section Scripts {
    @if (TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]');
        </script>
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-primary text-white text-center">
                        <!-- Profile Picture -->
                        <div class="d-flex flex-column align-items-center">
                            <img src="@(string.IsNullOrEmpty(Model.ImgUrl) ? Url.Content("~/images/AdminImg/Basic_Ui__28186_29.jpg") : Url.Content("~/images/AdminImg/" + Model.ImgUrl))"
                                 alt="Profile Picture"
                                 class="rounded-circle mb-3 shadow"
                                 style="width: 150px; height: 150px; object-fit: cover;">
                            <a asp-action="ChangePhoto" asp-controller="Account" class="btn btn-outline-light btn-sm">Change Photo</a>
                        </div>
                    </div>

                    <div class="card-body text-center">
                        <!-- User Details -->
                        <div class="row mb-3">
                            <label class="col-sm-4 text-end fw-bold">UserName:</label>
                            <div class="col-sm-8 text-start">
                                <span>@Model.UserName</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-4 text-end fw-bold">Name:</label>
                            <div class="col-sm-8 text-start">
                                <span>@Model.Name</span>
                            </div>
                        </div>

                        <hr>

                        <div class="row mb-3">
                            <label class="col-sm-4 text-end fw-bold">Email:</label>
                            <div class="col-sm-8 text-start">
                                <span>@Model.Email</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-4 text-end fw-bold">Phone:</label>
                            <div class="col-sm-8 text-start">
                                <span>@Model.PhoneNumber</span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-4">
                            <a asp-action="Edit" asp-controller="Account" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="bi bi-pencil-square"></i> Edit Profile
                            </a>
                            <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-warning">
                                <i class="bi bi-key-fill"></i> Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
