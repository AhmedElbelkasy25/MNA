@model Models.ViewModels.ChangePasswordVM

@{
    ViewData["Title"] = "Change Password";
}
<h1 class="text-center fw-bold display-4" style="color: white; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">
    <i class="bi bi-key-fill"></i> Change Password
</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3 p-4">
            <div class="card-body">
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Old Password -->
                    <div class="form-group mb-3">
                        <label asp-for="OldPassword" class="form-label fw-bold"><i class="bi bi-lock-fill"></i> Old Password</label>
                        <input asp-for="OldPassword" class="form-control rounded-pill" placeholder="Enter your old password" type="password" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <!-- New Password -->
                    <div class="form-group mb-3">
                        <label asp-for="NewPassword" class="form-label fw-bold"><i class="bi bi-lock-fill"></i> New Password</label>
                        <input asp-for="NewPassword" class="form-control rounded-pill" placeholder="Enter your new password" type="password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassord" class="form-label fw-bold"><i class="bi bi-lock-fill"></i> Confirm Password</label>
                        <input asp-for="ConfirmPassord" class="form-control rounded-pill" placeholder="Confirm your new password" type="password" />
                        <span asp-validation-for="ConfirmPassord" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill w-100">
                            <i class="bi bi-check-circle"></i> Change Password
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Back to Home -->
        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Home" asp-area="Student" class="btn btn-outline-primary px-4 py-2 rounded-pill shadow-sm text-decoration-none">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
