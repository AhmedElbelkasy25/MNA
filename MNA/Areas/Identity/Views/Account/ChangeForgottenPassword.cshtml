@model Models.ViewModels.ForgetPassordVM

@{
    ViewData["Title"] = "Change Forgotten Password";
}

<h1 class="text-center fw-bold display-4" style="color: white; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">
    <i class="bi bi-shield-lock-fill"></i> Change Forgotten Password
</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3 p-4">
            <div class="card-body">
                <form asp-action="ChangeForgottenPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Account (Read-only) -->
                    <div class="mb-3">
                        <label asp-for="Account" class="form-label fw-bold"><i class="bi bi-person-circle"></i> Account</label>
                        <input type="text" asp-for="Account" class="form-control rounded-pill bg-light" readonly />
                    </div>

                    <!-- New Password -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold"><i class="bi bi-key-fill"></i> New Password</label>
                        <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter new password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="mb-3">
                        <label asp-for="ConfirmPassord" class="form-label fw-bold"><i class="bi bi-check-circle"></i> Confirm Password</label>
                        <input asp-for="ConfirmPassord" type="password" class="form-control rounded-pill" placeholder="Re-enter new password" />
                        <span asp-validation-for="ConfirmPassord" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill w-100">
                            <i class="bi bi-arrow-repeat"></i> Change Password
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Back to Home -->
        <div class="text-center mt-2">
            <a asp-action="Index" asp-controller="Home" asp-area="Student" class="btn btn-outline-primary px-4 py-2 rounded-pill shadow-sm text-decoration-none">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

