<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3 p-4">
            <div class="card-body">
                <h3 class="text-center text-primary fw-bold"><i class="bi bi-image"></i> Change Profile Photo</h3>

                <form asp-action="ChangePhoto" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- File Input -->
                    <div class="form-group mb-3 text-center">
                        <label for="file" class="form-label fw-bold"><i class="bi bi-upload"></i> Upload New Photo</label>
                        <input type="file" name="file" id="file" class="form-control rounded-pill" />
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                        <button class="btn btn-info btn-lg rounded-pill w-100" type="submit">
                            <i class="bi bi-check-circle"></i> Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Back to Profile -->
        <div class="text-center mt-3">
            <a asp-action="Edit" asp-controller="Account" class="text-decoration-none">
                <i class="bi bi-arrow-left"></i> Back to Profile
            </a>
        </div>
    </div>
</div>
