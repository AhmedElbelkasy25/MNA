@model Models.ApplicationUser

@{
    ViewData["Title"] = "Edit Profile";
}

<h1 class="text-center text-primary fw-bold"><i class="bi bi-pencil-square"></i> Edit Profile</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3 p-4">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <!-- Username -->
                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label fw-bold"><i class="bi bi-person-circle"></i> Username</label>
                        <input asp-for="UserName" class="form-control rounded-pill" placeholder="Enter username" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Full Name -->
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold"><i class="bi bi-person-badge"></i> Full Name</label>
                        <input asp-for="Name" class="form-control rounded-pill" placeholder="Enter full name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label fw-bold"><i class="bi bi-envelope-fill"></i> Email</label>
                        <input asp-for="Email" type="email" class="form-control rounded-pill" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label fw-bold"><i class="bi bi-telephone-fill"></i> Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control rounded-pill" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Save Button -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill w-100">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Back to Home -->
        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Home" asp-area="Student" class="text-decoration-none">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
