@model Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h2 class="text-danger">Delete Course</h2>

<h4>Are you sure you want to delete this course?</h4>

<div class="card mt-3 shadow-sm">
    <div class="card-body">
        <h5 class="card-title text-primary">@Model.Title</h5>
        <p class="card-text"><strong>Category:</strong> @Model.Category.Name</p>
        <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>

        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <div class="mb-3">
                <img src="~/images/Course/@Model.ImgUrl" alt="Course Image" class="img-thumbnail" width="250" />
            </div>
        }

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
