@model IEnumerable<Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<h2 class="text-center my-4 cart-title">🛒 Your Shopping Cart</h2>

@if (Model != null && Model.Any())
{
    <div class="cart-container">
        <div class="cart-items">
            @foreach (var item in Model)
            {
                <div class="cart-item card mb-4">
                    <div class="row no-gutters">
                        <div class="col-md-3">
                            <img src="/images/course/@item.Course.ImgUrl" alt="@item.Course.Title" class="card-img cart-item-img" />
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">@item.Course.Title</h5>
                                @if(item.DiscountedPrice !=0)
                                {
                                    <p class="card-text">

                                        Price: <strong>@((Math.Round(item.DiscountedPrice,2)).ToString("F2")) EGP</strong><br>

                                    </p>
                                }
                                else{
                                    <p class="card-text">

                                        Price: <strong>@item.Course.Price.ToString("F2") EGP</strong><br>

                                    </p>
                                }

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card-body">
                                @if (item.DiscountedPrice != 0){
                                    <p class="text-center">
                                        <strong style="color: #ff5722;">@Math.Round((item.DiscountedPrice * item.Count),2) EGP</strong>
                                    </p>
                                    <hidden>  @(ViewBag.TotalPrice += (item.DiscountedPrice * item.Count))  </hidden>
                                }
                                else
                                {
                                    <p class="text-center">
                                        <strong style="color: #ff5722;">@(item.Course.Price * item.Count) EGP</strong>
                                    </p>
                                    <hidden> @(ViewBag.TotalPrice += item.Course.Price * item.Count) </hidden>
                                }
                                <div class="text-center">
                                    <a asp-action="Remove" asp-route-courseId="@item.Course.Id" class="btn btn-primary btn-sm">🗑 Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="cart-summary sticky-footer">
            <h4>Total: <strong style="color: #4caf50;">@(Math.Round(ViewBag.TotalPrice,2)) EGP</strong></h4>
            <a asp-action="Pay" class="btn btn-warning btn-lg">Proceed to Checkout 💳</a>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>Your cart is empty 😞</h4>
        <a asp-controller="Course" asp-action="Index" class="btn btn-primary">Browse Courses 📚</a>
    </div>
}


<style>/* Cart Title */
/* Cart Title */
.cart-title {
    color: #007bff; /* Blue color */
    font-size: 36px;
    font-weight: 700;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
}

/* Container for Cart */
.cart-container {
    display: flex;
    flex-direction: column;
    gap: 30px;
    margin-bottom: 20px;
}

/* Cart Item Design */
.cart-item {
    border-radius: 10px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
    background-color: #f8f9fa; /* Light gray background */
}

.cart-item:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    background-color: #f1f1f1; /* Slightly darker on hover */
}

/* Cart Item Image */
.cart-item-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px 0 0 10px;
}

/* Quantity Controls */
.quantity-controls a {
    margin: 0 5px;
    transition: background-color 0.3s ease;
}

.quantity-controls a:hover {
    background-color: #ff9800; /* Orange on hover */
}

.quantity-controls span {
    font-weight: 600;
}

/* Cart Item Body */
.card-body {
    padding: 20px;
}

.card-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #333;
}

.card-text {
    font-size: 1rem;
    color: #555;
}

.badge {
    font-size: 1rem;
    background-color: #ff5722; /* Red-Orange for badge */
    color: white;
}

/* Cart Summary */
.cart-summary {
    position: sticky;
    bottom: 0;
    background-color: #e8f5e9; /* Light green */
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    text-align: center;
    border-top: 3px solid #4caf50; /* Green border */
}

.cart-summary h4 {
    font-size: 24px;
    font-weight: 600;
    color: #4caf50; /* Green color */
}

.cart-summary a {
    font-weight: 600;
    padding: 12px 30px;
    font-size: 18px;
    background-color: #ff9800; /* Orange background */
    border-radius: 50px;
    color: white;
    text-transform: uppercase;
    transition: background-color 0.3s ease;
}

.cart-summary a:hover {
    background-color: #f57c00; /* Darker orange */
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
}

/* Empty Cart Alert */
.alert-info {
    background-color: #bbdefb; /* Light blue background */
    border-radius: 10px;
    padding: 20px;
}

.alert-info h4 {
    font-weight: 600;
    color: #007bff; /* Blue color */
}

.alert-info a {
    background-color: #007bff; /* Blue */
    color: white;
    padding: 12px 30px;
    border-radius: 5px;
    font-weight: 600;
}

.alert-info a:hover {
    background-color: #0056b3;
}

/* Sticky Footer */
.sticky-footer {
    position: sticky;
    bottom: 0;
    padding: 20px;
    background-color: #fff;
    border-top: 2px solid #007bff;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

/* Responsive Design */
@@media (max-width: 768px) {
    .cart-item {
        flex-direction: column;
    }

    .cart-item-img {
        width: 100%;
        height: 200px;
    }

    .quantity-controls {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .cart-summary {
        position: relative;
        margin-top: 20px;
    }
}

</style>