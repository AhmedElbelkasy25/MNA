@model IEnumerable<Models.StudentCategories>

@{
    ViewData["Title"] = "My Categories";
}

<h2 class="text-center my-4">My Categories</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        <strong>You have not selected any categories yet.</strong>
    </div>
}
else
{
    <div class="row">
        @foreach (var studentCategories in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@studentCategories.Category.Name</h5>
                    </div>
                </div>
            </div>
        }
    </div>
}