@model IEnumerable<Models.Payment>

@{
    ViewData["Title"] = "Payments";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #28a745; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); font-weight: bold;">
    <i class="bi bi-wallet-fill"></i> Payments
</h1>

<!-- Create New Payment Button -->
<div class="text-center mb-4">
    <a asp-action="Create" asp-controller="Payment" asp-area="Admin" class="btn btn-success btn-lg rounded-pill shadow">
        <i class="bi bi-plus-circle"></i> Add New Payment
    </a>
</div>

<!-- Responsive Payment Grid -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var payment in Model)
        {
            <div class="col">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden position-relative payment-card">
                    <!-- Gradient Background -->
                    <div class="card-header text-center text-white fw-bold" style="background: linear-gradient(135deg, #28a745, #17a2b8);">
                        <h4>Payment: @payment.TransactionId</h4>
                    </div>

                    <!-- Payment Details -->
                    <div class="card-body text-center">
                        <i class="bi bi-credit-card-fill text-warning fs-1"></i>
                        <p class="card-text text-muted">Amount: @payment.Amount</p>
                        <p class="card-text text-muted">Date: @payment.Date.ToString("yyyy-MM-dd")</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card-footer d-flex justify-content-between bg-light">
                        <a asp-action="Edit" asp-route-id="@payment.Id" class="btn btn-outline-primary rounded-pill px-3">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@payment.Id" class="btn btn-outline-danger rounded-pill px-3">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Hover Effect */
    .payment-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .payment-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    /* Button Styling */
    .btn-outline-primary, .btn-outline-danger {
        font-weight: bold;
    }
</style>
