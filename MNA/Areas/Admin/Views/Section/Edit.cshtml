@model Models.Section

@{
    ViewData["Title"] = "Edit Section";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #007bff; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); font-weight: bold;">
    <i class="bi bi-pencil-square"></i> Edit Section
</h1>

<!-- Edit Form in a Card -->
<div class="container d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4 w-50">
        <div class="card-body">
            <h4 class="card-title text-center text-primary">Update Section Details</h4>
            <hr />

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Section Title -->
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label fw-bold"></label>
                    <input asp-for="Title" class="form-control shadow-sm" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Course Selection -->
                <div class="form-group mb-3">
                    <label asp-for="CourseId" class="control-label fw-bold"></label>
                    <select asp-for="CourseId" class="form-select shadow-sm">
                        @foreach (var item in ViewBag.Courses)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
