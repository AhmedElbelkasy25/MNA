@model Models.Section

@{
    ViewData["Title"] = "Delete Section";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #dc3545; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); font-weight: bold;">
    <i class="bi bi-trash3-fill"></i> Delete Section
</h1>

<!-- Delete Confirmation Card -->
<div class="container d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4 w-50">
        <div class="card-body text-center">
            <h4 class="card-title text-danger">Are you sure you want to delete this section?</h4>
            <hr />

            <dl class="row text-start">
                <!-- Section Title -->
                <dt class="col-sm-4 fw-bold">Title:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <!-- Course Name -->
                <dt class="col-sm-4 fw-bold">Course:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Course.Title)</dd>
            </dl>

            <!-- Action Buttons -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger rounded-pill px-4 shadow">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
