@model Models.Section

@{
    ViewData["Title"] = "Create Section";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #007bff; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">
    <i class="bi bi-plus-circle"></i> Create Section
</h1>

<!-- Card Container for Form -->
<div class="container d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h4 class="text-center text-primary fw-bold mb-3">Section Details</h4>
            <hr />

            <!-- Section Form -->
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Order Field -->
                <div class="mb-3">
                    <label asp-for="Order" class="form-label fw-bold"><i class="bi bi-list-ol"></i> Order</label>
                    <input asp-for="Order" class="form-control rounded-pill" placeholder="Enter order number" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>

                <!-- Title Field -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold"><i class="bi bi-tag"></i> Title</label>
                    <input asp-for="Title" class="form-control rounded-pill" placeholder="Enter section title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Course Dropdown -->
                <div class="mb-3">
                    <label asp-for="CourseId" class="form-label fw-bold"><i class="bi bi-book"></i> Course</label>
                    <select asp-for="CourseId" class="form-control rounded-pill">
                        @foreach (var item in ViewBag.Courses)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg rounded-pill w-100">
                        <i class="bi bi-check-circle"></i> Create Section
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Back to List Button -->
<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-primary px-4 py-2 rounded-pill shadow-sm text-decoration-none">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
