@model IEnumerable<Models.Section>

@{
    ViewData["Title"] = "Sections Index";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #007bff; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">
    <i class="bi bi-list-ul"></i> Sections
</h1>

<!-- Create New Section Button -->
<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow">
        <i class="bi bi-plus-circle"></i> Create New Section
    </a>
</div>

<!-- Section Cards Table -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden position-relative">
                    <div class="card-header text-center text-white fw-bold" style="background: linear-gradient(135deg, #007bff, #6610f2);">
                        <h4>@item.Title</h4>
                    </div>
                    <div class="card-body">
                        
                        <p class="card-text text-muted">Course: @item.Course.Title</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info rounded-pill px-4">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-pill px-4">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Button Styling */
    .btn-outline-info, .btn-outline-danger {
        font-weight: bold;
    }

    /* Hover Effect on Cards */
    .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    /* Icon Styling */
    .bi {
        margin-right: 5px;
    }
</style>
