@model Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1 class="text-center text-danger mb-4" style="text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">
    <i class="bi bi-trash-fill"></i> Delete Course
</h1>

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body text-center">
            <h4 class="text-danger fw-bold">Are you sure you want to delete this course?</h4>
            <p class="text-muted">This action cannot be undone.</p>
            <hr />

            <!-- Course Details -->
            <dl class="row text-start">
                <dt class="col-sm-4 fw-bold"><i class="bi bi-book"></i> Title</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4 fw-bold"><i class="bi bi-file-text"></i> Description</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-4 fw-bold"><i class="bi bi-currency-dollar"></i> Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-4 fw-bold"><i class="bi bi-calendar"></i> Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-4 fw-bold"><i class="bi bi-person"></i> Instructor</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Instructor.Bio)</dd>

                <dt class="col-sm-4 fw-bold"><i class="bi bi-tags"></i> Category</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>
            </dl>

            <!-- Course Image -->
            <div class="text-center mt-3">
                @if (!string.IsNullOrEmpty(Model.ImgUrl))
                {
                    <img src="@Model.ImgUrl" alt="Course Image" class="img-thumbnail shadow" style="max-width: 100%; height: auto; border-radius: 10px;" />
                }
                else
                {
                    <p class="text-muted fst-italic">No image available</p>
                }
            </div>

            <!-- Delete Confirmation Form -->
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger btn-lg w-100 rounded-pill">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>

            <!-- Back Button -->
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary w-100 rounded-pill">
                    <i class="bi bi-arrow-left"></i> Cancel & Back to List
                </a>
            </div>
        </div>
    </div>
</div>
