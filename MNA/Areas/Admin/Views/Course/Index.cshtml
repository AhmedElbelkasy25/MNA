@model IEnumerable<Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<!-- Page Title with Custom Styling -->
<h1 class="text-center mb-4" style="color: #007bff; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); font-weight: bold;">
    <i class="bi bi-book-fill"></i> Courses
</h1>

<!-- Create New Course Button -->
<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow">
        <i class="bi bi-plus-circle"></i> Add New Course
    </a>
</div>

<!-- Responsive Course Grid -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden position-relative course-card">

                    <!-- Course Image -->
                    <img src="@(string.IsNullOrEmpty(course.ImgUrl) ? "/images/default.jpg" : "/images/Course/" + course.ImgUrl)"
                         class="card-img-top course-img"
                         alt="@course.Title">


                    <!-- Course Details -->
                    <div class="card-body text-center">
                        <h4 class="card-title">@course.Title</h4>
                        <p class="card-text text-muted">@course.Description</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-warning text-dark fs-6">
                                <i class="bi bi-currency-dollar"></i> @course.Price
                            </span>
                            <span class="badge bg-primary text-white fs-6">
                                <i class="bi bi-person-fill"></i> @course.Instructor.Name
                            </span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card-footer d-flex justify-content-between bg-light">
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-outline-primary rounded-pill px-3">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-outline-danger rounded-pill px-3">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom Styling -->
<style>
    /* Hover Animation */
    .course-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .course-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .course-img {
        max-height: 250px; /* Ensures a max height */
        width: 100%;
        object-fit: scale-down; /* Prevents cropping */
    }

</style>
