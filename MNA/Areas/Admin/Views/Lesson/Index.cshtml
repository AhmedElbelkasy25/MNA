@model IEnumerable<Models.Lesson>

@{
    ViewData["Title"] = "Lessons";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #007bff; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); font-weight: bold;">
    <i class="bi bi-book-fill"></i> Lessons
</h1>

<!-- Create New Lesson Button -->
<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow">
        <i class="bi bi-plus-circle"></i> Add New Lesson
    </a>
</div>

<!-- Responsive Lessons Grid -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var lesson in Model)
        {
            <div class="col">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden position-relative lesson-card">
                    <!-- Gradient Background -->
                    <div class="card-header text-center text-white fw-bold" style="background: linear-gradient(135deg, #007bff, #6610f2);">
                        <h4>@lesson.Title</h4>
                    </div>

                    <!-- Icon & Description -->
                    <div class="card-body text-center">
                        <i class="bi bi-journal-bookmark-fill text-warning fs-1"></i>
                        <p class="card-text text-muted">Order: @lesson.Order | Content: @lesson.Content</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card-footer d-flex justify-content-between bg-light">
                        <a asp-action="Edit" asp-route-id="@lesson.Id" class="btn btn-outline-primary rounded-pill px-3">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@lesson.Id" class="btn btn-outline-danger rounded-pill px-3">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Hover Effect */
    .lesson-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .lesson-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    /* Button Styling */
    .btn-outline-primary, .btn-outline-danger {
        font-weight: bold;
    }
</style>
