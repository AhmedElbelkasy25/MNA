@model Models.Lesson

@{
    ViewData["Title"] = "Delete Lesson";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #dc3545; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">
    <i class="bi bi-trash-fill"></i> Delete Lesson
</h1>

<!-- Card Container -->
<div class="container d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h3 class="text-danger text-center">Are you sure you want to delete this lesson?</h3>
            <hr />

            <!-- Lesson Details -->
            <div class="mb-3">
                <span class="fw-bold"><i class="bi bi-file-earmark-text"></i> Title:</span>
                <p class="fs-5 text-muted">@Model.Title</p>
            </div>

            <div class="mb-3">
                <span class="fw-bold"><i class="bi bi-file-earmark"></i> Content:</span>
                <p class="fs-5 text-muted">@Model.Content</p>
            </div>

            

            

            <!-- Delete Form -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <!-- Buttons -->
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
