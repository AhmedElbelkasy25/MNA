@model Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h1 class="text-center mb-4" style="color: #007bff; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">
    <i class="bi bi-pencil-square"></i> Edit Category
</h1>

<!-- Card Container for Form -->
<div class="container d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h4 class="text-center text-primary fw-bold mb-3">Update Category</h4>
            <hr />

            <!-- Form for Editing Category -->
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Category Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"><i class="bi bi-tag"></i> Name</label>
                    <input asp-for="Name" class="form-control rounded-pill" placeholder="Enter category name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg rounded-pill w-100">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Back to List Button -->
<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-primary px-4 py-2 rounded-pill shadow-sm text-decoration-none">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
