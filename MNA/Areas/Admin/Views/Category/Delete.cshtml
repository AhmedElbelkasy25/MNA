@model Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1 class="text-center mb-4" style="color: #dc3545; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">
    <i class="bi bi-trash-fill"></i> Delete Category
</h1>

<!-- Card Container -->
<div class="container d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body text-center">
            <h4 class="text-danger fw-bold">Are you sure you want to delete this category?</h4>
            <hr />

            <!-- Category Details -->
            <div class="mb-3">
                <span class="fw-bold"><i class="bi bi-tag"></i> Name:</span>
                <p class="fs-5 text-muted">@Model.Name</p>
            </div>

            <!-- Delete Form -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <!-- Buttons -->
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
