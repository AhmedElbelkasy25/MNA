@model IEnumerable<Models.Review>

@{
    ViewData["Title"] = "Reviews";
}

<!-- Page Title with Custom Styling -->
<h1 class="text-center mb-4" style="color: #007bff; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); font-weight: bold;">
    <i class="bi bi-pencil-fill"></i> Reviews
</h1>

<!-- Create New Button -->
<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow">
        <i class="bi bi-plus-circle"></i> Add New Review
    </a>
</div>

<!-- Responsive Card Grid -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var review in Model)
        {
            <div class="col">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden position-relative review-card">
                    <!-- Gradient Background Overlay -->
                    <div class="card-header text-center text-white fw-bold" style="background: linear-gradient(135deg, #ff6a00, #ee0979);">
                        <h4>@review.Student.Name</h4>
                        <span class="badge bg-warning text-dark fs-6">
                            <i class="bi bi-star-fill"></i> @review.rating
                        </span>
                    </div>

                    <!-- Review Content -->
                    <div class="card-body text-center">
                        <p class="card-text text-muted">@review.Comment</p>
                        <p class="card-text text-muted"><strong>Course:</strong> @review.Course.Title</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card-footer d-flex justify-content-between bg-light">
                        <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-outline-primary rounded-pill px-3">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-outline-danger rounded-pill px-3">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom Styling -->
<style>
    /* Hover Animation */
    .review-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .review-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    /* Image Styling */
    .review-img {
        height: 250px;
        object-fit: cover;
        border-radius: 0;
    }
</style>
