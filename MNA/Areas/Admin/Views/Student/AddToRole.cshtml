@using Models.ViewModels
@model AddToRoleVM

<div class="container">
    <h3 class="text-center mb-4" style="color: #2d8cf0; text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);">
        <i class="bi bi-person-plus"></i> Add User to Role
    </h3>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="AddToRole" method="post" class="bg-light p-4 rounded-3 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden User Id Input -->
                <input readonly hidden asp-for="@Model.Id" class="form-control" />

                <!-- User Name Input (Read-only) -->
                <div class="form-group mb-4">
                    <label asp-for="@Model.Name" class="control-label text-dark font-weight-bold">User Name</label>
                    <input readonly asp-for="Name" class="form-control form-control-lg" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <!-- Role Selection Dropdown -->
                <div class="form-group mb-4">
                    <label asp-for="@Model.Role" class="control-label text-dark font-weight-bold">Select Role</label>
                    <select asp-for="@Model.Role" class="form-control form-control-lg">
                        <option value="" disabled selected>Select a role</option>
                        @foreach (var item in Model.Roles)
                        {
                            <option value="@item.Name">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center mb-4">
                    <input type="submit" value="Done" class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Optional Styling to Enhance the Design -->
<style>
    .container {
        margin-top: 40px;
        max-width: 900px;
    }

    .form-group label {
        font-size: 1.1rem;
    }

    .form-group input.form-control, .form-group select.form-control {
        font-size: 1rem;
        padding: 15px;
        border-radius: 8px;
        border: 1px solid #ced4da;
        transition: all 0.3s ease-in-out;
    }

        .form-group input.form-control:focus, .form-group select.form-control:focus {
            border-color: #2d8cf0;
            box-shadow: 0 0 5px rgba(45, 140, 240, 0.5);
            outline: none;
        }

    .form-group input[readonly], .form-group select[readonly] {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-weight: bold;
        letter-spacing: 1px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-primary:focus {
            box-shadow: 0 0 0 0.25rem rgba(38, 143, 255, 0.5);
        }

    .form-group span {
        font-size: 0.875rem;
        color: #dc3545;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .rounded-3 {
        border-radius: 10px !important;
    }

    .shadow-sm {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .px-5 {
        padding-left: 3rem !important;
        padding-right: 3rem !important;
    }

    .py-3 {
        padding-top: 1.5rem !important;
        padding-bottom: 1.5rem !important;
    }

    .rounded-pill {
        border-radius: 50px !important;
    }

    .text-center {
        text-align: center;
    }

    .font-weight-bold {
        font-weight: bold;
    }
</style>
