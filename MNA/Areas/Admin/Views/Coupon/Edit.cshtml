@model Models.Coupon

@{
    ViewData["Title"] = "Edit Coupon";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #17a2b8; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); font-weight: bold;">
    <i class="bi bi-pencil-square"></i> Edit Coupon
</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-0 shadow-lg rounded-4 p-4">
            <div class="card-body">
                <h4 class="card-title text-center text-primary">Update Coupon Details</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <!-- Expire Date -->
                    <div class="form-group mb-3">
                        <label asp-for="ExpireDate" class="control-label fw-bold"></label>
                        <input type="date" asp-for="ExpireDate" class="form-control" />
                        <span asp-validation-for="ExpireDate" class="text-danger"></span>
                    </div>

                    <!-- Discount -->
                    <div class="form-group mb-3">
                        <label asp-for="Discount" class="control-label fw-bold"></label>
                        <input asp-for="Discount" type="number" class="form-control" placeholder="Enter Discount %" min="1" max="100" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>

                    <!-- Serial -->
                    <div class="form-group mb-3">
                        <label asp-for="Serial" class="control-label fw-bold"></label>
                        <input asp-for="Serial" class="form-control" placeholder="Enter Serial Number" />
                        <span asp-validation-for="Serial" class="text-danger"></span>
                    </div>

                    <!-- Course Selection -->
                    <div class="form-group mb-3">
                        <label asp-for="CourseId" class="control-label fw-bold"></label>
                        <select asp-for="CourseId" class="form-control">
                            <option value="">-- Select a Course --</option>
                            @foreach (var item in ViewBag.Courses)
                            {
                                <option value="@item.Id" selected="@(item.Id == Model.CourseId ? "selected" : null)">@item.Title</option>
                            }
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success btn-lg rounded-pill shadow">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Back Button -->
<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Custom Styling -->
<style>
    /* Hover Animation */
    .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }
</style>
