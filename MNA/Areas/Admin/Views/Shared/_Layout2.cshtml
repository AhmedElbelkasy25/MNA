@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MNA</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MNA.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>

        body {
            background-image: url("/images/background.jpg");
            background-size: cover;
            background-position: center;
        }
        /* ----- Global Styles ----- */
        body {
            background-color: #f5f7fa;
            font-family: 'Arial', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        /* ----- Navbar Styles ----- */
        .navbar {
            background: #2C3E50; /* Dark Gray-Blue */
            padding: 12px 20px;
        }

        .navbar-brand {
            font-size: 22px;
            font-weight: bold;
            color: #ecf0f1 !important;
        }

        .navbar-nav .nav-link {
            color: #dfe6e9 !important;
            font-weight: 500;
            padding: 8px 15px;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #f39c12 !important; /* Warm Gold */
            }

        /* ----- User Profile Dropdown ----- */
        .user-profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid white;
        }

        .dropdown-menu {
            border-radius: 8px;
            border: none;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item:hover {
            background: #ecf0f1;
        }

        /* ----- Buttons ----- */
        .btn-outline-light {
            border-color: #ecf0f1;
            color: #ecf0f1;
            transition: 0.3s;
        }

            .btn-outline-light:hover {
                background: #ecf0f1;
                color: #2C3E50;
            }

        /* ----- Footer Styles ----- */
        footer {
            background: #2C3E50;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

        .footer-links a {
            color: #f39c12;
            margin: 0 10px;
            text-decoration: none;
            transition: 0.3s;
        }

            .footer-links a:hover {
                color: #ffffff;
            }
    </style>
</head>
<body>
    
    
    
    <header>



        
    </header>

  

    <div class="container mt-4">

        <aside id="sidebar" class="js-sidebar bg-gradient">
            <div class="h-100">
                <div class="sidebar-logo p-3">
                    <h5 class="text-info fw-bold">Admin Dashboard</h5>
                </div>
                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        <h5> Welcome @User.Identity.Name </h5>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" id="elem" class="sidebar-link collapsed" data-bs-target="#pages" data-bs-toggle="collapse"
                           aria-expanded="false">
                            <i class="fa-solid fa-file-lines pe-2"></i>
                            Elemnets   <i class="bi bi-card-list"></i>
                        </a>
                        <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="/Admin/Course/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Course <i class="bi bi-book"></i>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="/Admin/Section/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Section <i class="bi bi-archive"></i>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="/Admin/Lesson/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Lesson <i class="bi bi-file-play-fill"></i>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="/Admin/Quiz/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Quiz  <i class="bi bi-files"></i>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="/Admin/Instructor/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Instructors <i class="bi bi-person-check"></i>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="/Admin/Category/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Category <i class="bi bi-bookmark-check"></i>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="/Admin/Coupon/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Coupons  <i class="bi bi-person-rolodex"></i>
                                </a>
                            </li>

                            <li class="sidebar-item">
                                <a href="/Admin/Student/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Users <i class="bi bi-people"></i>
                                </a>
                            </li>

                            <li class="sidebar-item">
                                <a href="/Admin/Payment/index" class="sidebar-link">
                                    <i class="fa-solid fa-list pe-2"></i>
                                    Payments <i class="bi bi-currency-dollar"></i>
                                </a>
                            </li>
                            @* 
                          <li class="sidebar-item">
                              <a href="/RequestCinema/index" class="sidebar-link">
                                  <i class="fa-solid fa-list pe-2"></i>

                              </a>
                          </li> *@
                        </ul>
                    </li>





                </ul>
            </div>
        </aside>

        <main role="main" class="pb-3">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container">
                    <a class="navbar-brand" asp-area="Student" asp-controller="Home" asp-action="Index">MNA Academy</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Student" asp-controller="Courses" asp-action="Index"><i class="fas fa-book"></i> Courses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Student" asp-controller="Lessons" asp-action="Index"><i class="fas fa-chalkboard"></i> Lessons</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                var user = await userManager.GetUserAsync(User);
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle user-profile" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                        <img src="@(user.ImgUrl == null ? "/images/AdminImg/default-user.png" : $"/images/AdminImg/{user.ImgUrl}")" alt="User">
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="/Identity/account/GetProfile?name=@User.Identity.Name"><i class="fas fa-user-circle"></i> Profile</a></li>
                                        <li><a class="dropdown-item" href="/Student/MyCourses"><i class="fas fa-graduation-cap"></i> My Courses</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" href="/Identity/Account/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="btn btn-outline-light me-2" href="/Identity/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                                <li class="nav-item"><a class="btn btn-warning" href="/Identity/Account/Register"><i class="fas fa-user-plus"></i> Register</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="footer-links">
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> |
                <a asp-area="Student" asp-controller="Courses" asp-action="Index">Courses</a> |
                <a asp-area="Student" asp-controller="Lessons" asp-action="Index">Lessons</a>
            </div>
            <p class="mt-3">&copy; 2025 - MNA Academy | All Rights Reserved</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
