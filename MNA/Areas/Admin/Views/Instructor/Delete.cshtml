@model Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<!-- Page Title -->
<h1 class="text-center mb-4" style="color: #dc3545; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); font-weight: bold;">
    <i class="bi bi-x-circle-fill"></i> Delete Instructor
</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center text-danger">Are you sure you want to delete this instructor?</h3>
                    <hr />

                    <!-- Instructor Details -->
                    <div>
                        <h4 class="text-center">Instructor Information</h4>
                        <dl class="row">
                            <dt class="col-sm-4">
                                <strong>Name</strong>
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt class="col-sm-4">
                                <strong>Bio</strong>
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Bio)
                            </dd>

                            <dt class="col-sm-4">
                                <strong>Profile Picture</strong>
                            </dt>
                            <dd class="col-sm-8">
                                <img src="@Model.PicUrl" class="img-thumbnail" style="width: 120px; height: 120px; object-fit: cover;" alt="Profile Picture">
                            </dd>

                            <dt class="col-sm-4">
                                <strong>Rating</strong>
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Rating)
                            </dd>
                        </dl>
                    </div>

                    <!-- Action Buttons -->
                    <div class="text-center">
                        <form asp-action="Delete" method="post" class="d-inline-block">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-outline-primary btn-lg rounded-pill shadow ms-3">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
